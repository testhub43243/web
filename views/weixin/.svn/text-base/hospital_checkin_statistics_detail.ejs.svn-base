    </div>
    
    <div class="ChuYuanMingXi-cen JinRiRuYuan">
    	<% for(var i = 0; i < list.length; i++){ %>
        <span <% if(list[i].check_out_status == 1) {%>class="active" <% } %>>
            <em>
                <div class="c-name"><b><%- list[i].mom_name %></b><i><%- list[i].patient_identify %></i></div>
                <div class="r-time">年龄：<%- list[i].mom_age %><i></i>预产期：<%- formatDate(list[i].due_date,'M-D') %></div>
            </em>
            <em>
                <div class="chanfu-jiashu"><p>产妇：<%- list[i].mom_tel %></p><p>家属：<%- list[i].dad_tel %></p></div>
            </em>
        </span>
        <% } %>
